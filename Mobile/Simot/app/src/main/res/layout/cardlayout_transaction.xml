        <!--android:layout_gravity="right"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:background="@drawable/bg_button"-->
        <!--android:textColor="@color/headerTextColor"-->
        <!--android:text="RESERVE"/>-->


    </LinearLayout>


</android.support.v7.widget.CardView>
