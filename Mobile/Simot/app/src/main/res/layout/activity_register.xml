<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:overScrollMode="ifContentScrolls"
    android:scrollbarStyle="insideInset"
    android:layout_width="match_parent"
    tools:context="pie.simot.user.Register">
<RelativeLayout android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <EditText
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/name"
        android:hint="Organization's Registered Name"
        android:layout_height="38dp"
        android:background="@drawable/edittext_box"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_height="38dp"
        android:background="@drawable/edittext_box"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/confirmPassword"
        android:hint="Confirm Password"
        android:layout_height="38dp"
        android:background="@drawable/edittext_box"
        android:layout_marginBottom="10dp"/>
    <AutoCompleteTextView
        android:layout_below="@id/confirmPassword"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/address"
        android:hint="Address"
        android:layout_height="38dp"
        android:background="@drawable/edittext_box"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_below="@id/address"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/representativeName"
        android:hint="Representative's Name"
        android:layout_height="38dp"
        android:background="@drawable/edittext_box"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_below="@id/representativeName"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/contactInfo"
        android:hint="Representative's Contact Information"
        android:layout_height="38dp"
        android:background="@drawable/edittext_box"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:inputType="textMultiLine"
        android:layout_below="@id/contactInfo"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/orgDescription"
        android:gravity="start"
        android:hint="Organization Description"
        android:layout_height="150dp"
        android:background="@drawable/edittext_box"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_below="@id/orgDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:textColor="@color/headerTextColor"
        android:text="Register"
        android:id="@+id/registerButton"
        />
</RelativeLayout>
</ScrollView>