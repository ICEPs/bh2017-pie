<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<FrameLayout
android:layout_width="match_parent"
android:layout_height="48dp"
android:background="@color/colorPrimary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/headerTextColor"
        android:textSize="20sp"
        android:text="Create Account"/>
    </FrameLayout>

<ScrollView
    android:layout_height="wrap_content"
    android:overScrollMode="ifContentScrolls"
    android:scrollbarStyle="insideInset"
    android:layout_width="match_parent"
    tools:context="pie.simot.Register">

    <LinearLayout android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organization's Registered Name"/>
    <EditText
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/name"
        android:layout_height="@dimen/editText_height"
        android:layout_marginBottom="@dimen/editText_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"/>

    <EditText
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_height="@dimen/editText_height"
        android:layout_marginBottom="@dimen/editText_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"/>

    <EditText
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/confirmPassword"
        android:layout_height="@dimen/editText_height"
        android:layout_marginBottom="@dimen/editText_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"/>

    <AutoCompleteTextView
        android:layout_below="@id/confirmPassword"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/address"
        android:layout_height="@dimen/editText_height"
        android:layout_marginBottom="@dimen/editText_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Representative's Name"/>

    <EditText
        android:layout_below="@id/address"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/representativeName"
        android:layout_height="@dimen/editText_height"
        android:layout_marginBottom="@dimen/editText_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Representative's Contact Info"/>

    <EditText
        android:layout_below="@id/representativeName"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/contactInfo"
        android:layout_height="@dimen/editText_height"
        android:layout_marginBottom="@dimen/editText_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organization Description"/>

    <EditText
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:inputType="textMultiLine"
        android:layout_below="@id/contactInfo"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:id="@+id/orgDescription"
        android:gravity="start"
        android:lines="3"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>

    <Button
        android:layout_below="@id/orgDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:textColor="@color/headerTextColor"
        android:text="Register"
        android:id="@+id/registerButton"
        />
</LinearLayout>
</ScrollView>
    </LinearLayout>
